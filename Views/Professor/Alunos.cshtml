@using Models;
@model List<Aluno>
@{
    ViewData["Title"] = "Alunos";
}

@{
    if(Cadastro.CdCargo == Cargo.Diretor.GetHashCode())
    {
        Layout= "/Views/Diretor/_Layout.cshtml";
    }
    else
    {
        Layout= "/Views/Professor/_Layout.cshtml";
    }
}

@* @{var x = DateTime.Now.ToString("dd/MM/yyyy") ; }  *@



<div class="container">
    
    <table class="table table-bordered">
        <h2>Alunos</h2>
        <tr>
            <td>Aluno</td>
            
        </tr>
        @{
            if(Model.Count > 0 && Model.First().CdPessoa > 0){
                    foreach(var item in Model)
                {
                    <tr>
                        <td name="Nome">@item.Nome</td>
                    </tr>

                }
            }
        }

    </table>

    <a class="btn btn-success" href="/Professor/IncluirAluno/@Model.First().CdTurmaProfessor">Incluir</a>

   
</div>




