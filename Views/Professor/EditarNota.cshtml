@using Models;
@model Nota

@{
    ViewData["Title"] = "Editar Nota";
}

@{
     if(Cadastro.CdCargo == Cargo.Diretor.GetHashCode())
    {
        Layout= "/Views/Diretor/_Layout.cshtml";
    }
    else
    {
        Layout= "/Views/Professor/_Layout.cshtml";
    }
}

<div class="container">
    <h1>Editar Nota do Aluno: @Model.Aluno</h1>

    <form method="POST" asp-action="SalvarNota" class="Form-group">
        <div class="form-control">
            <label asp-for="Nota1">Nota 1</label>
            <input class="form-control" type="number" step="0.01" max="10" min="0.01"  asp-for="Nota1" value="@Model.Nota1" ></br>
        </div>
        </br>
        <div class="form-control">
            <label asp-for="Nota2">Nota 2</label>
            <input class="form-control" type="number" step="0.01" max="10" min="0.01"  asp-for="Nota2" value="@Model.Nota2" ></br>
        </div>

        </br>

        <div class="form-control">
            <label asp-for="Nota3">Nota 3</label>
            <input class="form-control" type="number" step="0.01" max="10" min="0.01"  asp-for="Nota3" value="@Model.Nota3" ></br>
        </div>

        </br>

        <div class="form-control">
            <label asp-for="Nota4">Nota 4</label>
            <input class="form-control" type="number" step="0.01" max="10" min="0.01"  asp-for="Nota4" value="@Model.Nota4" ></br>
        </div>

        </br>

        <input asp-for="CdNota" style="display:none"> 
        <input asp-for="CdTurmaProfessor" style="display:none"> 
        
        <button class="btn btn-success" type="submit">Salvar</button>

    </form>

</div>