@using Models;
@model List<Aula>
@{
    ViewData["Title"] = "Chamada";
}

@{
    Layout= "/Views/Professor/_Layout.cshtml";
}

@{var x = DateTime.Now.ToString("dd/MM/yyyy") ; } 



<div class="container">
    
    <table class="table table-bordered">
        <h2>Aulas: <b> @x </b></h2>
        <tr>
            <td><b>Data</b></td>
            <td><b>Aula</b></td>
            <td><b>Chamada</b></td>
        </tr>
        @{
            if(Model.Count > 0){
                    foreach(var item in Model)
                {
                    <tr>
                        <td>@item.Data</td>
                        <td>@item.Descricao</td>
                        <td><a class="btn btn-primary" href="/Professor/Chamada/@item.CdAula">Chamada</a></td>
                    </tr>

                }
            }
            
        }

    </table>

</div>




