@using Models;
@model List<Aproveitamento>
@{
    ViewData["Title"] = "Disciplinas";
}

@{
    Layout= "/Views/Aluno/_Layout.cshtml";
}

@* @{var x = DateTime.Now.ToString("dd/MM/yyyy") ; }  *@



<div class="container">
    
    <table class="table table-bordered">
        <h2>Disciplinas</h2>
        <tr>
            <td>Professor</td>
            <td>Disciplina</td>
            <td>Turma</td>    
            <td>Presen√ßas</td>   
            <td>Faltas</td>     
            <td>Notas</td>      
        </tr>
        @{
            if(Model.Count > 0){
                foreach(var item in Model)
                {
                    <tr>
                        <td>@item.Professor</td>
                        <td>@item.Disciplina</td>
                        <td>@item.Turma</td>
                        <td>@item.Presencas</td>
                        <td>@item.Faltas</td> 
                        <td><a class="btn btn-primary" href="NotasAluno/@item.CdNota">Notas</a></td>  
                    </tr>
                }
            }
        }

    </table>

    

   
</div>




